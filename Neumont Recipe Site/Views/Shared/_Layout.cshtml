<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Neumont Chefspace</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Chefspace", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Recipes", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="recipeNav">
            <ul>
                <li class="recipeButton">@Html.ActionLink("Great-o Potatoes", "Recipe", "Home", new { recipeLink = "GreatoPotatoes", recipeName = "Great-o Potatoes" }, null)</li>
                <li class="recipeButton">@Html.ActionLink("Smoked Queso Dip", "Recipe", "Home", new { recipeLink = "SmokedQuesoDip", recipeName = "Smoked Queso Dip" }, null)</li>
                <li class="recipeButton">@Html.ActionLink("Queso Dip", "Recipe", "Home")</li>
                <li class="recipeButton">@Html.ActionLink("Chili", "Index", "Home")</li>
                <li class="recipeButton">@Html.ActionLink("Chefspace", "Index", "Home")</li>
            </ul>
        </div>
        <div class="recipeDisp">
            <div class="content">
            </div>
        </div>
        <div class="bottom_block block_2">
            <div class="content">
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
